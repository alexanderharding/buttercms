{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "strictFunctionTypes": false,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "abort-signal-interop": ["./dist/abort-signal-interop"],
      "ngx-dependency-injection-interop": [
        "./dist/ngx-dependency-injection-interop"
      ],
      "ngx-campaigns": ["./dist/ngx-campaigns"],
      "ngx-buttercms": ["./dist/ngx-buttercms"],
      "observable": ["./dist/observable"],
      "rx-broadcast-channel": ["./dist/rx-broadcast-channel"],
      "subscriber": ["./dist/subscriber"],
      "subscription": ["./dist/subscription"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "useUnknownInCatchVariables": true,
    "noUnusedParameters": false, // Enforced by linter
    "noUnusedLocals": false, // Enforced by linter
    "noImplicitThis": true,
    "resolveJsonModule": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
