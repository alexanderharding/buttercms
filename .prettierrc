{
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "auto",
	"htmlWhitespaceSensitivity": "css",
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"useTabs": true,
	"printWidth": 80,
	"overrides": [
		{ "files": "*.component.html", "options": { "parser": "angular" } },
		{ "files": "*.html", "options": { "parser": "html" } },
		{ "files": "*.json", "options": { "useTabs": false, "tabWidth": 2 } }
	]
}
